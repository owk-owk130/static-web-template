{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js"]
}
